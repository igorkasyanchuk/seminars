%h1.title
  - if defined? @seminar
    #{@seminar.title} Agenda
  - else
    = @page.page_title

.page_sidebar
  %h3 Upcoming Events
  %ul
    - Seminar.upcoming.by_date.each do |seminar|
      = render :partial => '/seminars/seminar_link', :locals => { :seminar => seminar, :active => (@seminar == seminar), :link => agenda_seminar_path(seminar) }


  - if Seminar.past.count > 0
    %br
    %h3 Past Events
    %ul
      - Seminar.past.by_date.each do |seminar|
        = render :partial => '/seminars/seminar_link', :locals => { :seminar => seminar, :active => (@seminar == seminar), :link => agenda_seminar_path(seminar) }

.page_content
  - if defined? @seminar
    - @seminar.panels.by_start_at.each do |panel|
      = render :partial => '/seminars/panel', :locals => { :panel => panel }
    .clear

    = line "Agenda"
    = @seminar.agenda.html_safe

  - else
    = @page.content.html_safe

.clear