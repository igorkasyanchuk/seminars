%h1.title
  - if defined? @seminar
    #{@seminar.title} Costs
  - else
    = @page.page_title

.page_sidebar
  %h3 Upcoming Events
  %ul
    - Seminar.upcoming.by_date.each do |seminar|
      = render :partial => '/seminars/seminar_link', :locals => { :seminar => seminar, :active => (@seminar == seminar), :link => costs_seminar_path(seminar) }
      %span.price Price: #{seminar.price_short_information}

  - if Seminar.past.count > 0
    %br
    %h3 Past Events
    %ul
      - Seminar.past.by_date.each do |seminar|
        = render :partial => '/seminars/seminar_link', :locals => { :seminar => seminar, :active => (@seminar == seminar), :link => costs_seminar_path(seminar) }
        %span.price Price: #{seminar.price_short_information}

.page_content
  - if defined? @seminar
    = @seminar.price_full_information.html_safe
  - else
    = @page.content.html_safe

.clear