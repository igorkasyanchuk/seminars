= title @page.seo_title
= description @page.seo_description
= keywords @page.seo_keywords

%h1.title
  - if defined? @seminar
    #{@seminar.title} Speakers
  - else
    = @page.page_title

.page_sidebar
  %h3 Upcoming Events
  %ul
    - Seminar.upcoming.by_date.each do |seminar|
      = render :partial => '/seminars/seminar_link', :locals => { :seminar => seminar, :active => (@seminar == seminar), :link => seminar }


  - if Seminar.past.count > 0
    %br
    %h3 Past Events
    %ul
      - Seminar.past.by_date.each do |seminar|
        = render :partial => '/seminars/seminar_link', :locals => { :seminar => seminar, :active => (@seminar == seminar), :link => seminar }

.page_content
  .speakers
    - if defined? @seminar
      - @seminar.speakers.each do |speaker|
        = render :partial => '/speakers/speaker', :locals => { :speaker => speaker }
    - else
      - @speakers.each do |speaker|
        = render :partial => '/speakers/speaker', :locals => { :speaker => speaker }

.clear    