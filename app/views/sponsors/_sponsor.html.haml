.sponsor
  %h2= link_to sponsor.name, sponsor_path(sponsor)
  .photo
    - if sponsor.logo.exists?
      = link_to (image_tag sponsor.logo(:medium), :alt => sponsor.name), sponsor_path(sponsor)
  .description
    .practice_areas= sponsor.practice_areas.collect{|e| e.name}.join(", ")
    .languages= sponsor.languages.collect{|e| e.name}.join(", ")
    .website= link_to sponsor.website, httpize(sponsor.website), :rel => 'nofollow'
  .clear