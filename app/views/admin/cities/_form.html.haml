= add_editor
= editor("#city_description");

= error_messages_for :city

= simple_form_for [:admin, @city], :html => {:multipart => true} do |f|
  = f.input :name, :label => "Name"
  = f.input :description
  = f.input :country, :label => "Country"
  = f.input :for_home_page, :label => "Show on Home page?"
  = f.input :photo
  = f.button :submit