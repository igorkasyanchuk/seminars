.panel
  %h3.panel_title.inline= panel.title
  %span= panel.start_time

  .panel_content!= panel.description

  %ul.panel_speakers
    - panel.speakers.with_photo.each do |speaker|
      %li= link_to (image_tag(speaker.photo.url(:thumb))), speaker

  %ul.panel_sponsors
    - panel.sponsors.with_logo.each do |sponsor|
      %li= link_to (image_tag(sponsor.logo.url(:thumb))), sponsor

  .clear