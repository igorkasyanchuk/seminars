.speaker
  .speaker_photo
    - if speaker.photo.exists?
      = link_to image_tag(speaker.photo(:medium), :alt => speaker.name), speaker_path(speaker)
  .speaker_info
    %h2.speaker_name= link_to speaker.name, speaker_path(speaker)
    .position= speaker.position
    .speaker_about
      .firm= speaker.firm
      .languages= speaker.languages.collect{|e| e.name}.join(", ")
  .clear